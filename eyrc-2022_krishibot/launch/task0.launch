<?xml version="1.0" ?>
<!-- ================================ DO NOT EDIT THIS FILE ===================================== -->
<launch>
	<arg name="record" default="false"/>
	<arg name="duration" default="30"/>
	<arg name="rec_name" default="KB_task0.bag"/>
    
	
	<!-- Recording section or Rosbag node --> 
	<group if="$(arg record)">
		<node name="rosbag_record_turtle" pkg="rosbag" type="record"
		   args="record -O $(find eyrc-2022_krishibot)/bag_files/$(arg rec_name) --duration=$(arg duration) --chunksize=10 /turtle1/cmd_vel /turtle1/pose /sysInfo" output="screen"/>
	</group>
	
    <!-- Executing Exe file -->
    <node pkg="eyrc-2022_krishibot" type="task0Ex" name="exeFileT0" output="screen" />

	<!-- Turtlesim node -->
	<node pkg="turtlesim" type="turtlesim_node" name="turtlesim_node"/>

	<node pkg="eyrc-2022_krishibot" type="task_0.py" name="node_myMsg_listener" output="screen"/>
</launch>
